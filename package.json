{
  "name": "windsock",
  "version": "0.1.3",
  "author": "Ben Sawyer",
  "description": "Observable JSONML compliant virtual DOM",
  "license": "MIT",
  "homepage": "https://github.com/bsawyer/windsock",
  "bugs": "https://github.com/bsawyer/windsock/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/bsawyer/windsock.git"
  },
  "main": "src/index.js",
  "dependencies": {},
  "devDependencies": {
    "jshint": "^2.5.10",
    "jscs": "^1.8.1",
    "mocha": "^2.0.1",
    "browserify": "^7.0.2",
    "uglify-js": "^2.4.16",
    "watch": "latest"
  },
  "scripts": {
    "jshint": "jshint src/",
    "jscs": "jscs src/",
    "mocha": "mocha test/",
    "pretest": "npm run jshint && npm run jscs",
    "test": "npm run mocha",
    "clean": "rm -rf dist/*",
    "browserify": "browserify src/index.js --no-detect-globals --standalone windsock > dist/windsock.js",
    "uglifyjs": "uglifyjs dist/windsock.js -o dist/windsock.min.js",
    "predist": "npm run clean",
    "dist": "npm run browserify && npm run uglifyjs",
    "prebuild": "npm run test",
    "build": "npm run dist",
    "build:watch": "watch 'npm run build' src/"
  }
}
